<?xml version="1.0" encoding="utf-8"?>
<library>
	<extension id="blackberry.io.dir">
		<entryClass>blackberry.io.dir.DirectoryExtension</entryClass>
	</extension>

	<platforms>
		<platform value="AIR">
			<target version="default" config="AIR_XHR" />
		</platform>
	</platforms>

	<configurations>
		<configuration name="AIR_XHR" version="1.0" comment="For XHR architecture for Java implementation">			
			<src type="text/javascript" path="js/common/dir_dispatcher.js" comment="Directory JS XHR dispatcher" />
			<src type="text/javascript" path="js/common/dir_ns.js" comment="Directory JS interface" />			
			<src type="text/actionscript" path="src/Air/Directory/src" comment="ActionScript implementation" />
		</configuration>
	</configurations>
	
	<features>
		<feature id="blackberry.io.dir" version="1.0.0" />
	</features>	
</library>
