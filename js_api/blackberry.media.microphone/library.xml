<?xml version="1.0" encoding="utf-8"?>
<library>
	<extension id="blackberry.media.microphone">
		<entryClass>blackberry.media.microphone.MicrophoneExtension</entryClass>
	</extension>

	<platforms>
		<platform value="AIR">
			<target version="default" config="AIR_XHR" />
		</platform>
	</platforms>

	<configurations>
		<configuration name="AIR_XHR" version="1.0" comment="For XHR architecture for Java implementation">			
			<src type="text/javascript" path="js/common/mic_dispatcher.js" comment="Microphone JS XHR dispatcher" />
			<src type="text/javascript" path="js/common/mic_ns.js" comment="Microphone JS interface" />			
			<src type="text/actionscript" path="src/Air/Microphone/src" comment="ActionScript implementation" />
		</configuration>
	</configurations>
	
	<features>
		<feature id="blackberry.media.microphone" version="1.0.0" />
	</features>	
</library>
